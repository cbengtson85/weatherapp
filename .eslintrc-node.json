{
    "globals": {
        "require": true,
        "rootPath": true
    },
    "env": {
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true
        }
    },
    "extends": ["eslint:recommended"],
    "rules": {
        "no-console": "off",
        "no-useless-concat": "error",
        "vars-on-top": "error",
        "comma-dangle": "error",
        "no-var": "error",
        "no-path-concat" : "error",
        "quotes": ["error", "single"]
    }
}
